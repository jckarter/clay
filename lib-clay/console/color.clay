import io.files.raw.*;
import io.files.(terminal?);
import printer.(print);

enum Color ( 
  Black,
  Red,
  Green,
  Yellow,
  Blue,
  Magenta,
  Cyan,
  White
);

private sgr(code){
  if(supported?())
    print(Char(27), '[', code, 'm');
}

supported?() = Unix?() and terminal?(stdoutRawFile());

resetConsole(){  sgr(0); }
textColor(c : Color){ sgr(30 + Int(c)); }
backgroundColor(c : Color){ sgr(40 + Int(c)); }
invertColors(){ sgr(7); }
