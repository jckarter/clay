record DestroyedBy[Value, Destructor] (value: Value, destructor: Destructor);
[V,D] RegularRecord?(#DestroyedBy[V,D]) = false;
[V,D] DestroyedBy[V,D]();
[V,D] destroy(d: DestroyedBy[V,D]) { d.destructor(d.value); }

[V,D] dereference(d: DestroyedBy[V,D]) = ref d.value;

alias destroyedBy(value, destructor) = DestroyedBy(value, destructor);
