//
// errorMessage
//

alias FORMAT_MESSAGE_FROM_SYSTEM = CULong(0x1000);

errorCodeName(code:Int) {
    ref names = errorNames();
    var nameCodes = mapped(x => x.0, names);
    var begin, end = ..binarySearch(nameCodes, code);
    if (begin == end)
        return "";
    return mappedInnerCoordinate(begin)^.1;
}
