import simd.primitives as prims;


/// @section  index 

[T,n,I when Integer?(I)]
forceinline index(a:Vec[T,n], i:I) = ref prims.vecElementRef(a, Int(i));



/// @section  type inferring constructor 

[..A when (countValues(..A) > 0) and equalValues?(..A)]
forceinline Vec(..args:A) {
    alias n = #countValues(..A);
    alias T = firstValue(..A);
    return Vec[T, n](..args);
}



/// @section  basic constructor 

[T,n,..A when (countValues(..A) == n) and equalValues?(T, ..A)]
forceinline Vec[T,n](..args:A) {
    var a = uninitializedUnsafe(Vec[T,n]);
    var i = 0;
    ..for (x in args) {
        a[i] = x;
        i +: 1;
    }
    return a;
}



/// @section  single element replicating constructor 

[T,n]
forceinline Vec[T,n](x:T) {
    var a = uninitializedUnsafe(Vec[T,n]);
    ..for (i in integers(#n))
        a[i] = x;
    return a;
}



/// @section  other constructors, moveUnsafe, resetUnsafe, assign, destroy 

[T,n]
forceinline Vec[T,n]() = Vec[T,n](T());

[T,n]
Vec[T,n](src:Vec[T,n]) --> returned:Vec[T,n] __llvm__{
    %1 = load ${Vec[T,n]} * %src
    store ${Vec[T,n]} %1, ${Vec[T,n]} * %returned
    ret i8* null
}

[T,n]
forceinline moveUnsafe(src:Vec[T,n]) --> returned:Vec[T,n] {
    returned <-- src;
}

[T,n]
forceinline assign(ref dest:Vec[T,n], src:Vec[T,n]) {
    dest <-- src;
}



/// @section  unpackVec 

[T,n]
forceinline unpackVec(a:Vec[T,n]) = ..unpackElements(a, #0);

private define unpackElements;

[T,n,i]
forceinline unpackElements(a:Vec[T,n], #i) =
    a[i], ..unpackElements(a, #(i+1));

[T,n,i when i == n]
forceinline unpackElements(a:Vec[T,n], #i) = ;



/// @section  numeric ops 

[T,n]
forceinline add(a:Vec[T,n], b:Vec[T,n]) = prims.add(a, b);

[T,n,X when Numeric?(X)]
forceinline add(a:Vec[T,n], x:X) = a + Vec[T,n](T(x));

[T,n,X when Numeric?(X)]
forceinline add(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) + a;


[T,n]
forceinline subtract(a:Vec[T,n], b:Vec[T,n]) = prims.subtract(a, b);

[T,n,X when Numeric?(X)]
forceinline subtract(a:Vec[T,n], x:X) = a - Vec[T,n](T(x));

[T,n,X when Numeric?(X)]
forceinline subtract(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) - a;


[T,n]
forceinline multiply(a:Vec[T,n], b:Vec[T,n]) = prims.multiply(a, b);

[T,n,X when Numeric?(X)]
forceinline multiply(a:Vec[T,n], x:X) = a * Vec[T,n](T(x));

[T,n,X when Numeric?(X)]
forceinline multiply(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) * a;


[T,n]
forceinline divide(a:Vec[T,n], b:Vec[T,n]) = prims.divide(a, b);

[T,n,X when Numeric?(X)]
forceinline divide(a:Vec[T,n], x:X) = a / Vec[T,n](T(x));

[T,n,X when Numeric?(X)]
forceinline divide(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) / a;


[T,n]
forceinline remainder(a:Vec[T,n], b:Vec[T,n]) = prims.remainder(a, b);

[T,n,X when Numeric?(X)]
forceinline remainder(a:Vec[T,n], x:X) = a % Vec[T,n](T(x));

[T,n,X when Numeric?(X)]
forceinline remainder(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) % a;



/// @section  bitwise ops 

[T,n]
forceinline bitshl(a:Vec[T,n], b:Vec[T,n]) = prims.bitshl(a, b);

[T,n,X when Numeric?(X)]
forceinline bitshl(a:Vec[T,n], x:X) = bitshl(a, Vec[T,n](T(x)));

[T,n,X when Numeric?(X)]
forceinline bitshl(x:X, a:Vec[T,n]) = bitshl(Vec[T,n](T(x)),  a);


[T,n]
forceinline bitshr(a:Vec[T,n], b:Vec[T,n]) = prims.bitshr(a, b);

[T,n,X when Numeric?(X)]
forceinline bitshr(a:Vec[T,n], x:X) = bitshr(a, Vec[T,n](T(x)));

[T,n,X when Numeric?(X)]
forceinline bitshr(x:X, a:Vec[T,n]) = bitshr(Vec[T,n](T(x)),  a);

private forceinline bitwiseOp(fn, a, b) {
    alias size = Int(TypeSize(Type(a)));
    return bitcast(
        Type(a),
        fn(bitcast(Vec[UInt8, size], a), bitcast(Vec[UInt8, size], b))
    );
}

[T,n, U,m when CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
forceinline bitand(a:Vec[T,n], b:Vec[U,m]) = bitwiseOp(prims.bitand, a, b);

[T,n,X when Numeric?(X)]
forceinline bitand(a:Vec[T,n], x:X) = bitand(a, Vec[T,n](T(x)));

[T,n,X when Numeric?(X)]
forceinline bitand(x:X, a:Vec[T,n]) = bitand(Vec[T,n](T(x)),  a);


[T,n, U,m when CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
forceinline bitor(a:Vec[T,n], b:Vec[U,m]) = bitwiseOp(prims.bitor, a, b);

[T,n,X when Numeric?(X)]
forceinline bitor(a:Vec[T,n], x:X) = bitor(a, Vec[T,n](T(x)));

[T,n,X when Numeric?(X)]
forceinline bitor(x:X, a:Vec[T,n]) = bitor(Vec[T,n](T(x)),  a);


[T,n, U,m when CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
forceinline bitxor(a:Vec[T,n], b:Vec[U,m]) = bitwiseOp(prims.bitxor, a, b);

[T,n,X when Numeric?(X)]
forceinline bitxor(a:Vec[T,n], x:X) = bitxor(a, Vec[T,n](T(x)));

[T,n,X when Numeric?(X)]
forceinline bitxor(x:X, a:Vec[T,n]) = bitxor(Vec[T,n](T(x)),  a);



/// @section  unary ops 

[T,n]
forceinline add(a:Vec[T,n]) = a;

[T,n]
forceinline subtract(a:Vec[T,n]) = Vec[T,n](T(0)) - a;

[T,n]
forceinline bitnot(a:Vec[T,n]) = bitxor(Vec[T,n](componentMask(T)), a);


/// @section  casting 

define CompatibleVectorTypes?(X, Y) : Bool;
CompatibleVectorTypes?(X, Y) = false;
[T,n, U,m when TypeSize(Vec[T,n]) == TypeSize(Vec[U,m])]
CompatibleVectorTypes?(#Vec[T,n], #Vec[U,m]) = true;

[T,n, U,m when T != U and CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
forceinline Vec[T,n](v: Vec[U,m]) = bitcast(Vec[T,n], v);



/// @section  boolean masks 

define componentMask;
[T when Integer?(T)]
forceinline componentMask(#T) = wrapCast(T, -1);
forceinline componentMask(#Float32) = bitcast(Float32, -1_i);
forceinline componentMask(#Float64) = bitcast(Float64, -1_l);
