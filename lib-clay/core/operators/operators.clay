/// @section  identity test 

define is?;

forceinline overload is?(x, y) : Bool = @x == @y;

forceinline isNot?(x, y) : Bool = not is?(x, y);


/// @section  case? 

forceinline overload case?(x, forward ..ys) : Bool {
    ..for (y in ..ys)
        if ((==)(x, y))
            return true;
    return false;
}


