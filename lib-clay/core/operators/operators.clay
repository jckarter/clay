define initialize;
[T] define ImplicitlyCopyable?(#T) : Bool;

ImplicitlyCopyable?(T) : Bool = true;

[T]
forceinline initialize(a:T) : {
    a <-- T();
}

[T when CallDefined?(T, T) and ImplicitlyCopyable?(T)]
forceinline copy(a:T) : T = T(a);

[T when CallDefined?(moveUnsafe, T) and CallDefined?(resetUnsafe, T)]
forceinline move(src:T) --> returned:T {
    returned <-- moveUnsafe(src);
    resetUnsafe(src);
}


Copyable?(T) = CallDefined?(copy, T);
Movable?(T)  = CallDefined?(move, T);


[T]
forceinline assign(ref dest:T, rvalue src:T) : {
    swap(dest, src);
}

[T when
    not BitwiseAssignedType?(T)
    and CallDefined?(copy, T)
    and CallDefined?(move, T)
    and not CopyDoesNotThrowType?(T)]
forceinline assign(ref dest:T, ref src:T) : {
    var tmp = moveUnsafe(dest);
    onerror dest <-- move(tmp);
    dest <-- copy(src);
}

[T when
    not BitwiseAssignedType?(T)
    and CallDefined?(copy, T)
    and CallDefined?(move, T)
    and CopyDoesNotThrowType?(T)]
forceinline assign(ref dest:T, ref src:T) : {
    destroy(dest);
    dest <-- copy(src);
}

[T when CallDefined?(T) and InitializeDoesNotThrowType?(T)]
forceinline resetUnsafe(src:T) { src <-- T(); }

[F]
forceinline updateAssign(#F, ref dest, forward ..src) : {
    dest = infixOperator(dest,F, ..src);
}

[F]
forceinline prefixUpdateAssign(#F, ref dest, forward ..src) : {
    dest = prefixOperator(F, dest, ..src);
}

forceinline (!=)(a, b) : Bool = not (==)(a, b);

define ordered?;
forceinline ordered?(a, b) : Bool = (<=)(a, b) or (<=)(b, a);

forceinline (<=)(a, b) : Bool = not (<)(b, a);

forceinline (>)(a, b) : Bool = (<)(b, a);

forceinline (>=)(a, b) : Bool = not (<)(a, b);

forceinline (&)(a, b, c, ..rest) = (&)((&)(a, b), c, ..rest);

forceinline (|)(a, b, c, ..rest) = (|)((|)(a, b), c, ..rest);

forceinline (~)(a, b, c, ..rest) = (~)((~)(a, b), c, ..rest);

[FIELD]
forceinline fieldRefAssign(dest, #FIELD, forward src) : {
    assign(fieldRef(dest, #FIELD), src);
}

[F, FIELD]
forceinline fieldRefUpdateAssign(#F, dest, #FIELD, forward ..src) : {
    updateAssign(#F, fieldRef(dest, #FIELD), ..src);
}

[F, FIELD, T when RValue?(fieldRef(typeToLValue(T), #FIELD))]
forceinline fieldRefUpdateAssign(#F, dest:T, #FIELD, forward src) : {
    fieldRefAssign(dest, #FIELD, F(fieldRef(dest, #FIELD), src));
}

[i]
forceinline staticIndexAssign(dest, #i, forward src) : {
    assign(staticIndex(dest, #i), src);
}

[F, i]
forceinline staticIndexUpdateAssign(#F, dest, #i, forward ..src) : {
    updateAssign(#F, staticIndex(dest, #i), ..src);
}

[F, i, T when RValue?(staticIndex(typeToLValue(T), #i))]
forceinline staticIndexUpdateAssign(#F, dest:T, #i, forward src) : {
    staticIndexAssign(dest, #i, F(staticIndex(dest, #i), src));
}

[..T when countValues(..T) >= 2]
forceinline indexAssign(dest, forward ..indicesAndSrc:T) : {
    assign(
        index(dest, ..withoutNthValue(
            #(countValues(..T)-1),
            ..indicesAndSrc
        )),
        lastValue(..indicesAndSrc),
    );
}

[F, ..A when countValues(..A) >= 2]
forceinline indexUpdateAssign(#F, dest, forward ..indicesAndSrc:A) : {
    updateAssign(
        #F,
        index(dest, ..takeValues(
            #(countIndices(..A)),
            ..indicesAndSrc
        )),
        ..dropValues(#countIndices(..A), ..indicesAndSrc),
    );
}

[F, T, ..A when
    (countValues(..A) >= 2) and
    RValue?(
        index(
            typeToLValue(T),
            ..mapValues(
                typeToLValue,
                ..takeValues(#(countIndices(..A)), ..A)
            )
        )
    )
]
forceinline indexUpdateAssign(#F, dest:T, forward ..indicesAndSrc:A) : {
    indexAssign(
        dest,
        ..takeValues(#(countIndices(..A)), ..indicesAndSrc),
        infixOperator(
            index(
                dest,
                ..takeValues(#(countIndices(..A)), ..indicesAndSrc)
            ),
            F, ..dropValues(#countIndices(..A), ..indicesAndSrc)
        )
    );
}


