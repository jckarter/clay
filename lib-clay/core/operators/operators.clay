define Operator?(..x) : Bool;
forceinline Operator?(..x) : Bool = false;
[OP] forceinline Operator?(#OP) : Bool 
    = Symbol?(OP) and operatorPrecedence(OP) > 0;

define BoolAssoc?(..x) : Bool;
define LeftAssoc?(..x) : Bool;
define RightAssoc?(..x) : Bool;

forceinline BoolAssoc?(..x) : Bool = false;
forceinline LeftAssoc?(..x) : Bool = false;
forceinline RightAssoc?(..x) : Bool = false;

[OP] forceinline BoolAssoc?(#OP) : Bool = integerEquals?(operatorAssociativity(OP),BOOLEAN);
[OP1,OP2] forceinline BoolAssoc?(#OP1,#OP2) : Bool = BoolAssoc?(OP1) and BoolAssoc?(OP2);

[OP] forceinline LeftAssoc?(#OP) : Bool = integerEquals?(operatorAssociativity(OP),LEFT);
[OP1,OP2] forceinline LeftAssoc?(#OP1,#OP2) : Bool = LeftAssoc?(OP1) and LeftAssoc?(OP2);

[OP] forceinline RightAssoc?(#OP) : Bool = integerEquals?(operatorAssociativity(OP),RIGHT);
[OP1,OP2] forceinline RightAssoc?(#OP1,#OP2) : Bool = RightAssoc?(OP1) and RightAssoc?(OP2);

[OP1,OP2] forceinline GreaterPrec?(#OP1,#OP2) : Bool 
    = integerLesser?(operatorPrecedence(OP1),operatorPrecedence(OP2));
[OP1,OP2] forceinline LowerPrec?(#OP1,#OP2) : Bool = GreaterPrec?(OP2,OP1);


private define infixToPolish;

forceinline infixToPolish(#0, #0,  ..y) = ;

[s, v, p, T when s>0 and Operator?(T)]
forceinline infixToPolish(#0, #s, #v, forward ..y, #p, #T) 
    = forward ..infixToPolish(#0, #(s-1), #1, ..y), T, #(p+v);

[n, s, v when n>0]
forceinline infixToPolish(#n, #s, #v,forward x, forward ..y) 
    = forward ..infixToPolish(#(n-1), #s, #(v+1), ..y), x;

[n, s, v, OP when n>0 and Operator?(OP)]
forceinline infixToPolish(#n, #s, #v, #OP, forward ..y) 
    = forward ..infixToPolish(#(n-1), #(s+1), #0, ..y, #v, #OP);

[n, s, v, OP, p, T when n>0 and s>0 
    and ((LeftAssoc?(OP) and LowerPrec?(OP, T)) 
        or (RightAssoc?(OP) and not GreaterPrec?(OP, T)) or BoolAssoc?(OP))] 
forceinline infixToPolish(#n, #s, #v, #OP, forward ..y, #p, #T) 
    = forward  ..infixToPolish(#n, #(s-1), #1, #OP, ..y), T,#(p+v);


private define evalPolish;
forceinline evalPolish() = ;

forceinline evalPolish(x, ..y) = x, ..evalPolish(..y);

[OP, v when Operator?(OP)]
forceinline evalPolish(#OP, #v, ..x) 
    = OP(..takeValues(#v, ..evalPolish(..x))), ..dropValues(#v, ..evalPolish(..x));

[OP, v when BoolAssoc?(OP)]
forceinline evalPolish(#OP, #v, ..x) = OP, ..evalPolish(..x);

private define evalBool;
forceinline evalBool(..x) = ..x;

[OP, OP2 when BoolAssoc?(OP, OP2)]
forceinline evalBool(#OP, y, #OP2, z, ..x) : Bool 
    = OP(y, z) and evalBool(#OP2, z, ..x);

[OP when BoolAssoc?(OP)]
forceinline evalBool(#OP, x, y) : Bool = OP(x, y);

[..T]
forceinline infixOperator(forward ..args:T) 
    = forward ..evalBool(..evalPolish(
        ..infixToPolish(#countValues(..T), #0, #0, ..reverseValues(..args))));

[OP]
forceinline infixOperator(forward a, #OP, forward b) 
    = forward ..OP(a,b);


/// @section  swap 

define swap(a, b) :;

forceinline swap(a, b) : {
    var temp = moveUnsafe(a);
    a <-- moveUnsafe(b);
    b <-- move(temp);
}

[T when BitwiseMovedType?(T)]
forceinline swap(a:T, b:T) : {
    alias TBytes = Array[UInt8, Int(TypeSize(T))];
    var temp = bitcast(TBytes, a);
    bitcast(TBytes, a) <-- bitcast(TBytes, b);
    bitcast(TBytes, b) <-- temp;
}


/// @section  min, max 

[T]
define min(a:T, b:T) : T;
[T]
define max(a:T, b:T) : T;

[T]
forceinline min(a:T, b:T) --> c:T {
    if (a <= b)
        c <-- a;
    else
        c <-- b;
}

[T]
forceinline min(ref a:T, ref b:T)  : ByRef[T]  {
    if (a <= b)
        return ref a;
    else
        return ref b;
}

[T]
forceinline max(a:T, b:T) --> c:T {
    if (a > b)
        c <-- a;
    else
        c <-- b;
}

[T]
forceinline max(ref a:T, ref b:T)  : ByRef[T] {
    if (a > b)
        return ref a;
    else
        return ref b;
}



/// @section  ifExpression 

[T]
alias ifExpression(condition, consequent:T, alternate:T) --> ret:T {
    if (condition)
        ret <-- consequent;
    else
        ret <-- alternate;
}

[T]
alias ifExpression(condition, ref consequent:T, ref alternate:T) : ByRef[T] {
    if (condition)
        return ref consequent;
    else
        return ref alternate;
}

alias ifExpression(#true, consequent, alternate) = forward consequent;
alias ifExpression(#false, consequent, alternate) = forward alternate;


[consequent, alternate when StringLiteral?(consequent) and StringLiteral?(alternate)]
alias ifExpression(condition, #consequent, #alternate) --> ret:StringLiteralRef {
    if (condition)
        ret <-- StringLiteralRef(consequent);
    else
        ret <-- StringLiteralRef(alternate);
}



