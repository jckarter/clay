import data.sequences.lazy.zipped.*;

define enumerated;
define enumeratedAs;

enumerated(ref a) = zipped(range(size(a)), a);

enumerated(rvalue a) {
    var n = size(a);
    return zipped(range(n), move(a));
}

enumeratedAs(T, ref a) = zipped(range(T(size(a))), a);

enumeratedAs(T, rvalue a) {
    var n = T(size(a));
    return zipped(range(n), move(a));
}
