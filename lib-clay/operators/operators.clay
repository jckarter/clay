[OP] BoolAssoc?(#OP) = integerEquals?(operatorAssociativity(OP),BOOLEAN);
[OP1,OP2] overload BoolAssoc?(#OP1,#OP2) = BoolAssoc?(OP1) and BoolAssoc?(OP2);

[OP] LeftAssoc?(#OP) = integerEquals?(operatorAssociativity(OP),LEFT);
[OP1,OP2] overload LeftAssoc?(#OP1,#OP2) = LeftAssoc?(OP1) and LeftAssoc?(OP2);

[OP] RightAssoc?(#OP) = integerEquals?(operatorAssociativity(OP),RIGHT);
[OP1,OP2] overload RightAssoc?(#OP1,#OP2) = RightAssoc?(OP1) and RightAssoc?(OP2);

[OP1,OP2] GreaterPrec?(#OP1,#OP2) = integerLesser?(operatorPrecedence(OP1),operatorPrecedence(OP2));
[OP1,OP2] LowerPrec?(#OP1,#OP2) = integerLesser?(operatorPrecedence(OP2),operatorPrecedence(OP1));


private define binaryOp;

overload binaryOp(..args) = ..args;

[OP,NX when RightAssoc?(OP)]
overload binaryOp(a, #OP, b, #NX, ..args) = ..binaryOp(a, OP, ..binaryOp(b, NX, ..args));

[OP,NX when LeftAssoc?(OP)]
overload binaryOp(a, #OP, b, #NX, ..args) = ..binaryOp(OP(a,b), NX, ..args);

[OP,NX when LowerPrec?(OP,NX)]
overload binaryOp(a, #OP, b, #NX, ..args) = ..binaryOp(a, OP, ..binaryOp(b, NX, ..args));

[OP,NX when GreaterPrec?(OP,NX)]
overload binaryOp(a, #OP, b, #NX, ..args) = ..binaryOp(OP(a,b), NX, ..args);

[OP when LeftAssoc?(OP) or RightAssoc?(OP)]
overload binaryOp(a, #OP, b) = OP(a,b);

[OP,T,U when integerEquals?(countValues(..CallOutputTypes(OP,T,U)),0)]
overload binaryOp(a:T, #OP, b:U) {OP(a,b);}

overload binaryOp(a) = a;

private define boolOp;

[OP,NX when BoolAssoc?(OP,NX)]
overload boolOp(a, #OP, b, #NX, ..args) = OP(a,b) and boolOp(b,NX,..args);

[OP when BoolAssoc?(OP)]
overload boolOp(a, #OP, b) = OP(a,b);

overload boolOp(a) = a;


inline overload infixOperator(..args) = boolOp(..binaryOp(..args));
[OP]
inline overload infixOperator(a, #OP, b) = OP(a,b);

[OP,T,U when integerEquals?(countValues(..CallOutputTypes(OP,T,U)),0)]
inline overload infixOperator(a:T, #OP, b:U) {OP(a,b);}


//
// swap
//

inline swap(a, b) {
    var temp = moveUnsafe(a);
    a <-- moveUnsafe(b);
    b <-- move(temp);
}

[T when BitwiseMovedType?(T)]
inline overload swap(a:T, b:T) {
    alias TBytes = Array[UInt8, Int(TypeSize(T))];
    var temp = bitcast(TBytes, a);
    bitcast(TBytes, a) <-- bitcast(TBytes, b);
    bitcast(TBytes, b) <-- temp;
}


//
// min, max
//

inline min(a, b) {
    if (a <= b)
        return a;
    else
        return b;
}

inline overload min(ref a, ref b) {
    if (a <= b)
        return ref a;
    else
        return ref b;
}

inline max(a, b) {
    if (a > b)
        return a;
    else
        return b;
}

inline overload max(ref a, ref b) {
    if (a > b)
        return ref a;
    else
        return ref b;
}



