//

inline is?(x, y) = @x == @y;
inline isNot?(x, y) = not is?(x, y);


//
// case?
//

inline overload case?(x, forward ..ys) : Bool {
    ..for (y in ..ys)
        if ((==)(x, y))
            return true;
    return false;
}


