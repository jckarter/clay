
external qsort(base:RawPointer, n:SizeT, width:SizeT,
               compare:CCodePointer[RawPointer, RawPointer, Int]): Void;

compare(pa, pb) {
    if (pa^ < pb^) return -1;
    if (pa^ > pb^) return 1;
    return 0;
}

main() {
    var a = Array[Int, 100]();
    var x = Int(size(a));
    for (e in a) {
        e = 2*x;
        x -= 1;
    }

    println("a[0], a[2] = ", a[0], ", ", a[2]);

    var fp = makeCCodePointer(compare, Pointer[Int], Pointer[Int]);

    println("compare test = ", fp(&a[0], &a[2]));
    println("compare test = ", fp(&a[0], &a[0]));
    println("compare test = ", fp(&a[2], &a[0]));

    var fp2 = CCodePointer[RawPointer, RawPointer, Int](fp);

    qsort(RawPointer(&a[0]),
          size(a),
          TypeSize(Int),
          fp2);

    println("a[0], a[2] = ", a[0], ", ", a[2]);
    return 0;
}
