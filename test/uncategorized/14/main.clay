
foreach(f, a) {
    for (x in a)
        f(x);
}

sumWithLambda(a) {
    var sum = 0;
    foreach(x => { sum +:= x; }, a);
    println("sum with lambda = ", sum);
}

sumWithBlock(a) {
    var sum = 0;
    foreach(x -> { sum +:= x; }, a);
    println("sum with block = ", sum);
}

testReturnByRef() {
    var a = array(0, 1, 2);
    var f = (i -> ref a[i]);
    for (x in a)
        f(x) +:= 10;
    for (x in a)
        println(x);
}

main() {
    var a = Vector[Int](1, 2, 3, 4, 5, 6);
    sumWithLambda(a);
    sumWithBlock(a);
    testReturnByRef();
}
