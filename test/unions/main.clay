
record Point (
    x : Int,
    y : Int,
);

alias T = Union[Double,
                UInt64,
                Array[UInt8,8],
                Point];

main() {
    println("sizeof union = ", TypeSize(T));

    var u = T();
    u.0 = 1.0;

    println("as Double = ", u.0);
    println("as UInt64 = ", u.1);

    print("as Array[UInt8,8] = ");
    for (x in u.2)
        print(x, " ");
    println();

    println("as Point = ", u.3);
}


overload printTo(stream, p:Point) {
    printTo(stream, "Point(", p.x, ", ", p.y, ")");
}
