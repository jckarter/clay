import libc;


//
// doCall
//

[..ArgTypes,
 ..ReturnTypes,
 ..VarArgTypes
 when Tuple[..ArgTypes] ==
   Tuple[..takeValues(#countValues(..ArgTypes), ..VarArgTypes)]]
doCall(f:VarArgsCCodePointer[[..ArgTypes], [..ReturnTypes]], ..args:VarArgTypes) {
    f(..args);
}


//
// testing code

main() {
    var x = 10;
    doCall(libc.printf, cstring("hello, %s! x = %d"), cstring("world"), x);
}
