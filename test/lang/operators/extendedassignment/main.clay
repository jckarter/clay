import printer.(println);

record Foo ();

var dummy = 10;

index(x:Foo, index) = ref dummy;
staticIndex(x:Foo, index) = ref dummy;
fieldRef(x:Foo, field) = ref dummy;

indexAssign(x:Foo, index, value) {
    println("indexAssign(x, ", index, ", ", value, ")");
}

indexUpdateAssign(op, x:Foo, index, ..args) {
    println("indexUpdateAssign(", ..weaveValues(", ",op,"x",index,..args), ")");
}

[i]
staticIndexAssign(x:Foo, #i, value) {
    println("staticIndexAssign(x, ", i, ", ", value, ")");
}

[i]
staticIndexUpdateAssign(op, x:Foo, #i, value) {
    println("staticIndexUpdateAssign(", op, ", x, ", i, ", ", value, ")");
}

[FIELD]
fieldRefAssign(x:Foo, #FIELD, value) {
    println("fieldRefAssign(x, ", FIELD, ", ", value, ")");
}

[FIELD]
fieldRefUpdateAssign(op, x:Foo, #FIELD, value) {
    println("fieldRefUpdateAssign(", op, ", x, ", FIELD, ", ", value, ")");
}

main() {
    var foo = Foo();
    foo[10] = "hello";
    foo.20 = "hi";
    foo.bar = "hola";
    foo[30] +: 100;
    foo.40 *: 200;
    foo.baz \: 300;
}
