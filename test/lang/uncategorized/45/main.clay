import printer.(println);

define PointerTypes;
PointerTypes(a, ..b) = Pointer[a], ..PointerTypes(..b);
PointerTypes() = ;

define pointerValues;
pointerValues(a, ..b) = @a, ..pointerValues(..b);
pointerValues() = ;

record PtrTuple[..T] (
    ptrs : Tuple[..PointerTypes(..T)]
);

[..T]
PtrTuple(..args:T) =
    PtrTuple[..T]( [..pointerValues(..args)] );

main() {
    var a = PtrTuple("foo", "bar", 10);
    println(Type(a));
}
