import printer.(println);

define PointerTypes;
override PointerTypes(a, ..b) = Pointer[a], ..PointerTypes(..b);
override PointerTypes() = ;

define pointerValues;
override pointerValues(a, ..b) = @a, ..pointerValues(..b);
override pointerValues() = ;

record PtrTuple[..T] =
    ptrs : Tuple[..PointerTypes(..T)]
;

[..T]
override PtrTuple(..args:T) =
    PtrTuple[..T]( [..pointerValues(..args)] );

main() {
    var a = PtrTuple("foo", "bar", 10);
    println(Type(a));
}
