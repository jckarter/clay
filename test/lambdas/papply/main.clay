
main() {
    var plus100 = partialApply(add, 100);
    for (x in [1, 2, 3, 4])
        println( plus100(x) );
}

partialApply(f, ...args) = CallableAndArgs(f, Tuple(...args));

record CallableAndArgs[F, ...A] {
    f:F;
    args : Tuple[...A];
}

[F, ...A]
overload call(x:CallableAndArgs[F, ...A], ...remainingArgs) =
    x.f(...unpack(x.args), ...remainingArgs);
