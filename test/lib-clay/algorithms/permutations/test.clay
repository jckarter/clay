import test.*;
import algorithms.permutations.*;
import printer.(str);
import sequences.*;
import vectors.*;

fact(n){
  var result = 1;
  for(i in range(1, n + 1)) result *: i;
  return result;
}

baseTestCase(n) = 
  TestCase(str("Permuting 1..", n), => {
    var it = Vector[Int](range(1,n+1));

    var counter = 0;
    eachPermutation(it, -> {
      counter +: 1;
    });

    expectEqual(fact(n), counter);
  });

main() = testMain(
  TestSuite("Permutations of integer ranges", map(baseTestCase, range(1, 7)))
);
