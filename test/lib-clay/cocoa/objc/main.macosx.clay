import cocoa.objc.*;
import printer.(println);


selector("alloc") = Id;
selector("init") = Id;
selector("description") = NSString;
selector("retain") = Id;
selector("release") = Id;
selector("autorelease") = Id;
selector("class") = Id; // XXX class

selector("stringWithUTF8String:") = Id, Pointer[CChar];
varargSelector("stringWithFormat:") = Id, NSString; 
selector("UTF8String") = Pointer[CChar];

selector("numberWithInt:") = Id, Int;

selector("drain") = Void;

record NSObject = externalClass(Void);
externalClassMethod(#NSObject, "alloc") = Id;
externalClassMethod(#NSObject, "class") = Id; // XXX Class
externalInstanceMethod(#NSObject, "init") = Id;
externalInstanceMethod(#NSObject, "description") = NSString;
externalInstanceMethod(#NSObject, "retain") = Id;
externalInstanceMethod(#NSObject, "release") = Id;
externalInstanceMethod(#NSObject, "autorelease") = Id;
externalInstanceMethod(#NSObject, "class") = Id; // XXX Class

record NSString = externalClass(NSObject);
externalClassMethod(#NSString, "stringWithUTF8String:")
    = Id, Pointer[CChar];
externalVarargClassMethod(#NSString, "stringWithFormat:")
    = Id, NSString;
externalInstanceMethod(#NSString, "UTF8String")
    = Pointer[CChar];

record NSNumber = externalClass(NSObject);
externalClassMethod(#NSNumber, "numberWithInt:") = Id, Int;

record NSAutoreleasePool = externalClass(NSObject);
externalInstanceMethod(#NSNumber, "drain") = Void;

main() {
    var pool = NSAutoreleasePool.alloc().init();

    var format = NSString.stringWithUTF8String(cstring("%@ didn't start the fire"));
    var n = NSNumber.numberWithInt(451);

    var formattedString = NSString.stringWithFormat(format, n);

    println(CStringRef(formattedString.UTF8String()));

    var formattedString2 = NSString.stringWithFormat(format, NSSTR("Wii"));

    println(CStringRef(formattedString2.UTF8String()));

    pool.drain();
}
