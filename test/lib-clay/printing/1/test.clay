import printer.*;
import data.strings.*;
import data.vectors.*;

import test.*;


enum Gender (
    MALE,
    FEMALE,
);

record Person (
    name : StringLiteralRef,
    age : Int,
    gender: Gender,
    address : Address,
);

record Address (
    email : StringLiteralRef,
);

testPrintRecordEnum() {
    var p = Person(StringLiteralRef("Foo"), 100, FEMALE, Address(StringLiteralRef("foo@bar.com")));
    expectPrinted("Person(Foo, 100, FEMALE, Address(foo@bar.com))", p);
}


main() = testMain(
    TestSuite("printer", 
        TestCase("record, enum", testPrintRecordEnum),
        TestCase("tuple", -> {
            expectPrinted("[1, true, 3.5]", [1, true, 3.5]);
        }),
        TestCase("array", -> {
            expectPrinted("{10, 20, 30}", array(10, 20, 30));
        }),
        TestCase("vector", -> {
            expectPrinted("{true, false, true}", vector(true, false, true));
        }),
        TestCase("CStringRef", -> {
            expectPrinted("aaa", CStringRef(cstring("aaa")));
            expectPrinted("(null)", CStringRef());
        }),
        TestCase("UniString?", -> {
            var s = array(UniChar('a'), UniChar('b'));
            expectPrinted("ab", s);
        }),
    ));

