        UInt8,  x ref=> { printTo(stream, x, "u8" ); },
        UInt16, x ref=> { printTo(stream, x, "u16"); },
        UInt32, x ref=> { printTo(stream, x, "u32"); },
        UInt64, x ref=> { printTo(stream, x, "u64"); },
        Int8,   x ref=> { printTo(stream, x, "i8" ); },
        Int16,  x ref=> { printTo(stream, x, "i16"); },
