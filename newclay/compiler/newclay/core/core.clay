printRTValueKindTo(stream, kind) {
    switch (kind) {
    case RT_VALUE_REF:
        printTo(stream, "ref ");
        break;
    case RT_VALUE_RVALUE:
        printTo(stream, "rvalue ");
        break;
    case RT_VALUE_CONST:
