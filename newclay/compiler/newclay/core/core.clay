overload lesser?(x:I, y:StaticIntValue) = x < y.value;

overload Int64(x:StaticIntValue) = x.value;
overload UInt64(x:StaticIntValue) = UInt64(x.value);

StaticIntValueArgs?(I, J)
    = VariantMember?(IntValue, I)
    and VariantMember?(IntValue, J)
    and inValues?(StaticIntValue, I, J);

[I, J | StaticIntValueArgs?(I, J)]
overload add(x:I, y:J) = StaticIntValue(Int64(x) + Int64(y));
[I, J | StaticIntValueArgs?(I, J)]
overload subtract(x:I, y:J) = StaticIntValue(Int64(x) - Int64(y));
[I, J | StaticIntValueArgs?(I, J)]
overload multiply(x:I, y:J) = StaticIntValue(Int64(x) * Int64(y));
[I, J | StaticIntValueArgs?(I, J)]
overload divide(x:I, y:J) = StaticIntValue(Int64(x) / Int64(y));
[I, J | StaticIntValueArgs?(I, J)]
overload remainder(x:I, y:J) = StaticIntValue(Int64(x) % Int64(y));

overload plus(x:StaticIntValue) = x;
overload minus(x:StaticIntValue) = StaticIntValue(-x.value);

// IntValue operations

private applyToIntValue(fn, x, y) = IntValue(fn(x, y));
overload applyToIntValue(fn, x) = IntValue(fn(x));

